<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionBarStyle" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--DEFAULT STYLES-->
    <style name="defaultText">
        <item name="android:paddingLeft">@dimen/margin</item>
        <item name="android:paddingRight">@dimen/margin</item>
        <item name="android:paddingBottom">@dimen/margin</item>
        <item name="android:gravity">center</item>
    </style>
    <!--CLICKABLE TEXT ITEMS-->
    <style name="clickableLightText" parent="defaultText">
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/text_color_light</item>
    </style>

    <style name="top_header_border">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/green_500</item>
    </style>

    <!--DON"T USE THESE STYLES!  DELETE SOON!  NOT APART OF ACTUAL DESIGN-->
    <!--Splash Screen Style-->
    <style name="splashStyle">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontName">Roboto-Thin.ttf</item>
        <item name="android:textSize">@dimen/splashTitleSize</item>
        <item name="android:background">@color/light_blue_300</item>
    </style>

    <!--Speaker Card View Styles-->
    <style name="textStyle">
        <item name="android:layout_weight">.333333</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/dark_purple_900</item>
        <item name="android:textSize">@dimen/cardTextSize</item>
    </style>

    <style name="eventCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>


    <!--DON"T USE THESE STYLES!  DELETE SOON!  NOT APART OF ACTUAL DESIGN-->

</resources>
