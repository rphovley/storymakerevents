<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionBarStyle" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="PresentationTheme" parent="AppTheme.AppBarOverlay">
        <item name="windowActionBarOverlay">true</item>
    </style>

    <!--TEXT STYLES-->
    <style name="defaultText">
        <item name="android:paddingLeft">@dimen/margin</item>
        <item name="android:paddingRight">@dimen/margin</item>
        <item name="android:paddingBottom">@dimen/margin</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="defaultText.light">
        <item name="android:textColor">@color/text_color_light</item>
    </style>

    <style name="defaultText.light.clickable">
        <item name="android:clickable">true</item>
    </style>

    <style name="defaultText.pageHeader">
        <item name="fontName">RobotoCondensed-Bold.ttf</item>
        <item name="android:paddingBottom">@dimen/small_margin</item>
        <item name="android:textSize">@dimen/text_header</item>
    </style>

    <style name="presentationText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="presentationText.condensedFont">
        <item name="fontName">RobotoCondensed-Bold.ttf</item>
    </style>
    <!--TEXT STYLES-->
    <style name="top_header_border">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/green_500</item>
    </style>

    <!--CARD STYLES-->
    <style name="defaultCard">
        <item name="cardBackgroundColor">@color/colorCardBackground</item>
    </style>

    <style name="card" parent="defaultCard">
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
        <item name="cardElevation">5dp</item>
        <item name="cardCornerRadius">5dp</item>
    </style>

    <style name="smallCard" parent="defaultCard">
        <item name="android:layout_marginLeft">@dimen/small_margin</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:layout_marginRight">@dimen/small_margin</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">2dp</item>
    </style>

    <style name="clicakableCard">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/small_card_selector</item>
    </style>
    <!--CARD STYLES-->


    <!--DON"T USE THESE STYLES!  DELETE SOON!  NOT APART OF ACTUAL DESIGN-->
    <!--Splash Screen Style-->
    <style name="splashStyle">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontName">Roboto-Thin.ttf</item>
        <item name="android:textSize">@dimen/splashTitleSize</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!--Speaker Card View Styles-->
    <style name="textStyle">
        <item name="android:layout_weight">.333333</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/dark_purple_900</item>
        <item name="android:textSize">@dimen/cardTextSize</item>
    </style>

    <style name="eventCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>


    <!--DON"T USE THESE STYLES!  DELETE SOON!  NOT APART OF ACTUAL DESIGN-->

</resources>
