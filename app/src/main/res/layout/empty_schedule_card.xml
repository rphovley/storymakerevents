<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <innatemobile.storymakerevents.CustomViews.RobotoTextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/breakoutName"
    app:fontName="Roboto-Thin.ttf"
    android:gravity="left"
    android:textSize="32sp"
    android:text="Breakout 1"

        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddEmpty"
        android:background="@drawable/ic_add_circle_green_24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>