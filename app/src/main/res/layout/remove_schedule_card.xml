<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_schedule_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimaryDark"
            android:layout_height="wrap_content">
            <innatemobile.storymakerevents.CustomViews.RobotoTextView
                style="@style/clickableLightText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:id="@+id/txtPresentationTitle"
                android:textSize="@dimen/text_header"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="Presentation Name IS Really Long and can't"
                android:layout_toLeftOf="@+id/txtSpeakerName"
                android:layout_toStartOf="@+id/txtSpeakerName" />
            <innatemobile.storymakerevents.CustomViews.RobotoTextView
                style="@style/clickableLightText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_header"
                android:textColor="@color/text_color_light"
                android:text="Speaker Name"
                android:id="@+id/txtSpeakerName"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btnRemoveFromSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/white"
                android:clickable="true"
                android:layout_margin="@dimen/margin"
                android:layout_gravity="center"
                android:background="@drawable/remove_selector"/>
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin"
                android:background="@color/grey_300"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/small_margin">
                <innatemobile.storymakerevents.CustomViews.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtPresentationDescription"
                    app:fontName="Roboto-Thin.ttf"
                    android:text="Art Hovley lectures on the difference between 'reading' and 'not reading', exploring the alphabet, and using pictures to understand words."
                    android:gravity="center"
                    android:textSize="16sp" />
                <innatemobile.storymakerevents.CustomViews.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtRoom"
                    app:fontName="Roboto-BoldItalic.ttf"
                    android:textSize="@dimen/sDefaultTextSize"
                    android:text="Room"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>